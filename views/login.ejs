<body>
    <div class="form-content p-5 border rounded ">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items mt-5">
                        <% if(errors){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= errors %>
                              </div>
                            <% } %>
                        <% if(success){ %>
                            <div class="alert alert-success" role="alert">
                                <%= success %>
                              </div>
                            <% } %>
                        <h3>Login</h3>
                          <p>Please Use your creditional to login</p>
                        <form class="align-items-center" action="/auth/login" method="post">
                            <input class="form-control" id="emailInput" type="text" name="email" placeholder="Email address" required>
                            <input class="form-control mt-2" id="passwordInput" type="password" name="password" placeholder="Password" required>
                            <div class="form-button">
                                <button id="submit" type="submit" class="btn btn-primary mt-2">Login</button>
                            </div>
                        </form>

                        <div class="page-links mt-2">
                            <a href="/register" class="text-warning">Register new account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
