<body>
    <div class="form-body p-5 border rounded">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <% if(errors){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= errors %>
                              </div>
                            <% } %>
                      <h3> Register new user </h3>
                        <form class="mt-5" action="auth/create" method="post">
                            <input class="form-control mt-2" type="text" name="firstName" placeholder="frist name : eg: john" required>
                            <input class="form-control mt-2" type="text" name="lastName" placeholder="last name : eg: Mahbobi" required>
                            <input class="form-control mt-2" type="email" name="email" placeholder="email address" required>
                            <input class="form-control mt-2" type="password" name="password" placeholder="password" required>
                            <input class="form-control mt-2" type="password" name="confirmPassword" placeholder="confirm password" required>
                            <div class="form-button">
                                <button id="submit" type="submit" class="btn btn-primary mt-2">Sign up</button>
                            </div>
                        </form>

                        <div class="page-links">
                            <a href="/" class="center text-warning"> Login to account </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="js/jquery.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>
</body>

